<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>🚀 Math Racer Turbo - Extreme Math Challenge 🚀</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #ff3860;
            --secondary: #00d1b2;
            --success: #23d160;
            --danger: #ff3860;
            --warning: #ffdd57;
            --dark: #1a1a2e;
            --light: #f8f9fa;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: white;
            overflow: hidden;
            height: 100vh;
        }

        .game-container {
            height: 100vh;
            position: relative;
            overflow: hidden;
        }

        /* Enhanced Road Design */
        .road {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 70%;
            background: linear-gradient(90deg, #2c2c2c 0%, #3c3c3c 50%, #2c2c2c 100%);
            overflow: hidden;
        }

        .road-lines {
            position: absolute;
            top: 0;
            width: 100%;
            height: 100%;
        }

        .road-line {
            position: absolute;
            left: 25%;
            width: 4px;
            height: 60px;
            background: yellow;
            animation: roadLineMove linear infinite;
        }

            .road-line:nth-child(2) {
                left: 50%;
            }

            .road-line:nth-child(3) {
                left: 75%;
            }

        @@keyframes roadLineMove {
            0% {
                transform: translateY(-60px);
            }

            100% {
                transform: translateY(100vh);
            }
        }

        /* Player Car */
        .player-car {
            position: absolute;
            bottom: 50px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 200px;
            background: linear-gradient(45deg, #ff3860, #ff6b9d);
            border-radius: 10px 10px 5px 5px;
            transition: left 0.3s cubic-bezier(0.68, -0.55, 0.27, 1.55);
            z-index: 10;
            box-shadow: 0 10px 40px rgba(255, 56, 96, 0.5);
        }

            .player-car::before {
                content: '';
                position: absolute;
                top: 10px;
                left: 10px;
                right: 10px;
                height: 60px;
                background: linear-gradient(135deg, rgba(136, 204, 255, 0.9), rgba(170, 221, 255, 0.9));
                border-radius: 6px;
            }

            .player-car::after {
                content: '';
                position: absolute;
                bottom: -15px;
                left: 10px;
                right: 10px;
                height: 30px;
                background: #222;
                border-radius: 50%;
                box-shadow: 0 5px 15px rgba(0,0,0,0.5);
            }

        .car-wheels {
            position: absolute;
            bottom: -20px;
            width: 100%;
            display: flex;
            justify-content: space-between;
            padding: 0 5px;
        }

        .car-wheel {
            width: 25px;
            height: 25px;
            background: #222;
            border-radius: 50%;
            border: 3px solid #555;
            animation: wheelSpin linear infinite;
        }

        @@keyframes wheelSpin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        /* Obstacles */
        .obstacle {
            position: absolute;
            bottom: 100%;
            width: 80px;
            height: 80px;
            background: linear-gradient(45deg, #ff3860, #ff7eb3);
            border-radius: 10px;
            box-shadow: 0 5px 20px rgba(255, 56, 96, 0.5);
            display: none;
            z-index: 5;
        }

            .obstacle::before {
                content: '💥';
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                font-size: 40px;
            }

        /* Game Header */
        .game-header {
            position: absolute;
            top: 20px;
            left: 0;
            right: 0;
            display: flex;
            justify-content: space-between;
            padding: 0 20px;
            z-index: 100;
        }

        .stats-card {
            background: rgba(0, 0, 0, 0.9);
            padding: 15px 25px;
            border-radius: 20px;
            backdrop-filter: blur(10px);
            border: 2px solid var(--primary);
            min-width: 140px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            transition: all 0.3s ease;
        }

            .stats-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 40px rgba(255, 56, 96, 0.3);
            }

        .stat-value {
            font-size: 2em;
            font-weight: bold;
            color: var(--warning);
            text-shadow: 0 0 15px currentColor;
            letter-spacing: 1px;
        }

        .stat-label {
            font-size: 0.9em;
            color: var(--light);
            opacity: 0.9;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        /* Math Problem */
        .math-problem-container {
            position: absolute;
            top: 150px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0, 0, 0, 0.95);
            padding: 25px;
            border-radius: 25px;
            backdrop-filter: blur(20px);
            border: 3px solid var(--primary);
            box-shadow: 0 0 60px rgba(255, 56, 96, 0.4);
            min-width: 450px;
            text-align: center;
            z-index: 200;
        }

        .question {
            font-size: 2.8em;
            font-weight: bold;
            color: white;
            margin-bottom: 25px;
            text-shadow: 0 0 15px rgba(255, 255, 255, 0.5);
            font-family: 'Courier New', monospace;
        }

        .options-lanes {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 15px;
            margin-top: 20px;
        }

        .lane-btn {
            padding: 20px 10px;
            font-size: 1.4em;
            font-weight: bold;
            border: none;
            border-radius: 15px;
            background: linear-gradient(135deg, var(--secondary), #00c4a7);
            color: white;
            cursor: pointer;
            transition: all 0.2s ease;
            box-shadow: 0 8px 20px rgba(0, 209, 178, 0.3);
            min-height: 70px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .lane-btn:hover {
                transform: translateY(-3px) scale(1.05);
                box-shadow: 0 12px 30px rgba(0, 209, 178, 0.5);
            }

            .lane-btn.correct {
                background: linear-gradient(135deg, var(--success), #00c084);
                animation: correctPulse 0.6s ease;
                box-shadow: 0 0 40px var(--success);
            }

            .lane-btn.wrong {
                background: linear-gradient(135deg, var(--danger), #ff1e4d);
                animation: shakeWrong 0.6s ease;
                box-shadow: 0 0 40px var(--danger);
            }

        @@keyframes correctPulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.15);
            }
        }

        @@keyframes shakeWrong {
            0%, 100% {
                transform: translateX(0);
            }

            25% {
                transform: translateX(-10px);
            }

            75% {
                transform: translateX(10px);
            }
        }

        /* Timer */
        .timer-container {
            position: absolute;
            top: 100px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0, 0, 0, 0.9);
            padding: 15px 30px;
            border-radius: 20px;
            border: 2px solid var(--warning);
            backdrop-filter: blur(15px);
            z-index: 150;
            min-width: 250px;
            text-align: center;
        }

        .timer-bar {
            width: 100%;
            height: 15px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            overflow: hidden;
            margin: 10px 0;
        }

        .timer-fill {
            height: 100%;
            background: linear-gradient(90deg, var(--success), var(--warning), var(--danger));
            transition: width 0.1s linear;
            border-radius: 8px;
        }

        .time-left {
            font-size: 1.4em;
            font-weight: bold;
            color: var(--warning);
            font-family: 'Courier New', monospace;
        }

        /* Screens */
        .screen {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(26, 26, 46, 0.98), rgba(36, 36, 62, 0.98));
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 400;
            backdrop-filter: blur(20px);
        }

            .screen h1 {
                font-size: 4.5em;
                margin-bottom: 20px;
                background: linear-gradient(135deg, var(--primary), var(--warning));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                text-shadow: 0 0 40px rgba(255, 56, 96, 0.5);
                animation: titleGlow 2s ease-in-out infinite alternate;
            }

        @@keyframes titleGlow {
            from {
                filter: brightness(1);
            }

            to {
                filter: brightness(1.3);
            }
        }

        .btn-start {
            padding: 20px 50px;
            font-size: 1.5em;
            background: linear-gradient(135deg, var(--primary), var(--warning));
            border: none;
            border-radius: 50px;
            color: white;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 15px 40px rgba(255, 56, 96, 0.4);
            margin: 10px;
            position: relative;
            overflow: hidden;
        }

            .btn-start:hover {
                transform: translateY(-5px) scale(1.05);
                box-shadow: 0 20px 50px rgba(255, 56, 96, 0.6);
            }

            .btn-start::after {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
                transform: rotate(45deg);
                animation: buttonShine 3s linear infinite;
            }

        @@keyframes buttonShine {
            0% {
                transform: rotate(45deg) translateX(-100%);
            }

            100% {
                transform: rotate(45deg) translateX(100%);
            }
        }

        /* Leaderboard */
        .leaderboard-container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0, 0, 0, 0.97);
            padding: 30px;
            border-radius: 25px;
            backdrop-filter: blur(25px);
            border: 3px solid var(--secondary);
            min-width: 600px;
            max-height: 80vh;
            overflow-y: auto;
            z-index: 300;
            box-shadow: 0 0 50px rgba(0, 209, 178, 0.3);
        }

        .leaderboard-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            margin: 12px 0;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 15px;
            transition: all 0.3s ease;
            border-left: 5px solid var(--warning);
        }

            .leaderboard-item:hover {
                background: rgba(255, 255, 255, 0.15);
                transform: translateX(10px);
            }

            .leaderboard-item.top-3 {
                border-left-color: var(--warning);
                background: linear-gradient(90deg, rgba(255, 221, 87, 0.1), transparent);
            }

        .rank {
            font-weight: bold;
            font-size: 1.5em;
            color: var(--warning);
            min-width: 50px;
        }

        .player-name {
            flex-grow: 1;
            margin: 0 20px;
            font-weight: bold;
            font-size: 1.2em;
        }

        .player-score {
            color: var(--success);
            font-weight: bold;
            font-size: 1.3em;
        }

        /* Speed Effects */
        .speed-effect {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 100px;
            background: linear-gradient(0deg, rgba(255, 56, 96, 0.3), transparent);
            opacity: 0;
            pointer-events: none;
        }

        .nitro-effect {
            position: absolute;
            bottom: 100px;
            left: 50%;
            transform: translateX(-50%);
            width: 200px;
            height: 100px;
            background: linear-gradient(0deg, rgba(255, 56, 96, 0.5), transparent);
            filter: blur(20px);
            opacity: 0;
            pointer-events: none;
        }

        /* Game Over Effects */
        .game-over-fire {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 200px;
            background: linear-gradient(0deg, rgba(255, 56, 96, 0.6), rgba(255, 221, 87, 0.4), transparent);
            opacity: 0;
            pointer-events: none;
            filter: blur(40px);
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .math-problem-container {
                min-width: 90%;
                padding: 20px;
            }

            .question {
                font-size: 2em;
            }

            .options-lanes {
                grid-template-columns: repeat(2, 1fr);
            }

            .leaderboard-container {
                min-width: 90%;
            }
        }
    </style>
</head>
<body>
    <div class="game-container">
        <!-- Start Screen -->
        <div class="screen" id="startScreen">
            <h1>🚀 MATH RACER TURBO 🚀</h1>
            <h2 class="mb-4">Extreme Speed Math Challenge</h2>
            <div class="mb-4" style="width: 350px;">
                <input type="text" id="playerNameInput" class="form-control form-control-lg"
                       placeholder="ENTER YOUR NAME" style="text-align: center; font-size: 1.3em; background: rgba(255,255,255,0.1); color: white; border: 2px solid var(--primary);">
                <div id="nameHint" class="form-text text-info mt-1" style="display: none;">
                    <i class="fas fa-info-circle"></i> Multiple attempts allowed for same name!
                </div>
                <div id="nameError" class="text-danger mt-1" style="display: none;">
                    <i class="fas fa-exclamation-triangle"></i> Please enter a valid name!
                </div>
            </div>
            <button class="btn-start" onclick="startGame()">
                <i class="fas fa-play-circle"></i> START RACE
            </button>
            <div class="mt-4">
                <button class="btn btn-outline-warning btn-lg" onclick="showLeaderboard()" style="padding: 15px 30px;">
                    <i class="fas fa-trophy"></i> LEADERBOARD
                </button>
            </div>
        </div>

        <!-- Game UI -->
        <div class="game-header">
            <div class="stats-card">
                <div class="stat-label">SCORE</div>
                <div class="stat-value" id="currentScore">0</div>
            </div>
            <div class="stats-card" id="speedCard">
                <div class="stat-label">SPEED</div>
                <div class="stat-value" id="currentSpeed">0%</div>
            </div>
        </div>

        <!-- Timer -->
        <div class="timer-container" id="timerContainer" style="display: none;">
            <div class="timer-bar">
                <div class="timer-fill" id="timerFill" style="width: 100%"></div>
            </div>
            <div class="time-left" id="timeLeft">10.0s</div>
        </div>

        <!-- Math Problem -->
        <div class="math-problem-container" id="mathProblemContainer" style="display: none;">
            <div class="question" id="question">5 + 3 = ?</div>
            <div class="options-lanes" id="optionsContainer">
                <!-- Options populated by JavaScript -->
            </div>
        </div>

        <!-- Road -->
        <div class="road">
            <div class="road-lines">
                <div class="road-line"></div>
                <div class="road-line"></div>
                <div class="road-line"></div>
            </div>
            <div class="player-car" id="playerCar">
                <div class="car-wheels">
                    <div class="car-wheel"></div>
                    <div class="car-wheel"></div>
                </div>
            </div>
            <div class="obstacle" id="obstacle"></div>
        </div>

        <!-- Effects -->
        <div class="speed-effect" id="speedEffect"></div>
        <div class="nitro-effect" id="nitroEffect"></div>
        <div class="game-over-fire" id="gameOverFire"></div>

        <!-- Game Over Screen -->
        <div class="screen" id="gameOverScreen" style="display: none;">
            <h1>💥 RACE OVER! 💥</h1>
            <h2 class="mb-3">Final Score: <span id="finalScore" class="text-warning" style="font-size: 2em;">0</span></h2>
            <h3>Correct Answers: <span id="finalCorrect" class="text-success">0</span>/<span id="finalTotal" class="text-light">0</span></h3>
            <h4>Top Speed: <span id="finalSpeed" class="text-info">0%</span></h4>
            <div class="mt-4">
                <button class="btn-start" onclick="restartGame()">
                    <i class="fas fa-redo"></i> RACE AGAIN
                </button>
            </div>
            <div class="mt-3">
                <button class="btn btn-outline-info btn-lg" onclick="showLeaderboard()" style="padding: 12px 25px;">
                    <i class="fas fa-trophy"></i> LEADERBOARD
                </button>
            </div>
        </div>

        <!-- Leaderboard Screen -->
        <div class="screen" id="leaderboardScreen" style="display: none;">
            <h1>🏆 LEADERBOARD 🏆</h1>
            <div class="leaderboard-container">
                <div id="leaderboardContent">
                    <!-- Leaderboard populated by JavaScript -->
                </div>
                <div class="mt-4 text-center">
                    <button class="btn btn-warning btn-lg" onclick="hideLeaderboard()" style="padding: 12px 30px;">
                        <i class="fas fa-arrow-left"></i> BACK TO GAME
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        class TurboMathRacer {
            constructor() {
                this.gameState = 'start';
                this.score = 0;
                this.speed = 0;
                this.combo = 0;
                this.comboMultiplier = 1;
                this.correctAnswers = 0;
                this.totalQuestions = 0;
                this.playerName = '';
                this.playerId = null;
                this.currentProblem = null;
                this.baseTime = 10;
                this.currentTime = this.baseTime;
                this.timerInterval = null;
                this.gameStartTime = null;
                this.currentLane = 2; // 1-4
                this.lanePositions = [15, 35, 65, 85]; // Lane positions in percentage

                this.setupEventListeners();
                this.setupRoadLines();
            }

            setupEventListeners() {
                // Keyboard controls for lanes
                document.addEventListener('keydown', (e) => {
                    if (this.gameState !== 'playing') return;

                    switch (e.key) {
                        case '1':
                        case '2':
                        case '3':
                        case '4':
                            const optionIndex = parseInt(e.key) - 1;
                            const buttons = document.querySelectorAll('.lane-btn');
                            if (buttons[optionIndex]) {
                                buttons[optionIndex].click();
                            }
                            break;
                        case 'ArrowLeft':
                            this.moveCarToLane(Math.max(1, this.currentLane - 1));
                            break;
                        case 'ArrowRight':
                            this.moveCarToLane(Math.min(4, this.currentLane + 1));
                            break;
                    }
                });

                // Handle player name input
                document.getElementById('playerNameInput').addEventListener('input', (e) => {
                    const value = e.target.value.trim();
                    const hint = document.getElementById('nameHint');
                    const error = document.getElementById('nameError');

                    if (value.length > 0) {
                        hint.style.display = 'block';
                        error.style.display = 'none';
                    } else {
                        hint.style.display = 'none';
                        error.style.display = 'block';
                    }
                });

                // Enter key to start game
                document.getElementById('playerNameInput').addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') {
                        this.startGame();
                    }
                });
            }

            setupRoadLines() {
                const lines = document.querySelectorAll('.road-line');
                lines.forEach(line => {
                    line.style.animationDuration = '0.8s';
                });
            }

            updateRoadLines() {
                const lines = document.querySelectorAll('.road-line');
                const baseDuration = 0.8;
                const speedFactor = this.speed / 100;
                const newDuration = Math.max(0.2, baseDuration - (speedFactor * 0.6));

                lines.forEach(line => {
                    line.style.animationDuration = `${newDuration}s`;
                });
            }

            async startGame() {
                const playerName = document.getElementById('playerNameInput').value.trim();
                if (!playerName) {
                    document.getElementById('nameError').style.display = 'block';
                    return;
                }

                this.playerName = playerName;
                this.gameState = 'playing';
                this.gameStartTime = Date.now();

                // Try to get or create player
                try {
                    const response = await fetch('/api/game/get-or-create-player', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ username: this.playerName })
                    });
                    const player = await response.json();
                    this.playerId = player.id;
                } catch (error) {
                    console.error('Error creating player:', error);
                }

                document.getElementById('startScreen').style.display = 'none';
                document.getElementById('mathProblemContainer').style.display = 'block';
                document.getElementById('timerContainer').style.display = 'block';

                this.resetGame();
                this.generateProblem();
                this.startTimer();
                this.moveCarToLane(2); // Start in middle lane
            }

            resetGame() {
                this.score = 0;
                this.speed = 50; // Changed from 0 to 50
                this.combo = 0;
                this.comboMultiplier = 1;
                this.correctAnswers = 0;
                this.totalQuestions = 0;
                this.currentTime = this.baseTime;
                this.currentLane = 2;

                this.updateDisplay();
                this.updateRoadLines();
                this.hideEffects();
            }

            calculateTimeLimit() {
                const speedReduction = this.speed * 0.05; // Faster speed = less time
                return Math.max(3, this.baseTime - speedReduction);
            }

            async generateProblem() {
                try {
                    const response = await fetch(`/api/game/new-problem/${this.speed}`);
                    this.currentProblem = await response.json();
                    this.displayProblem();
                    this.resetTimer();
                } catch (error) {
                    console.error('Error generating problem:', error);
                    // Fallback problem
                    this.currentProblem = {
                        question: "5 + 3 = ?",
                        correctAnswer: 8,
                        options: [6, 7, 8, 9]
                    };
                    this.displayProblem();
                    this.resetTimer();
                }
            }

            displayProblem() {
                document.getElementById('question').textContent = this.currentProblem.question;

                const optionsContainer = document.getElementById('optionsContainer');
                optionsContainer.innerHTML = '';

                this.currentProblem.options.forEach((option, index) => {
                    const button = document.createElement('button');
                    button.className = 'lane-btn';
                    button.textContent = option;
                    button.dataset.lane = index + 1;
                    button.onclick = () => this.checkAnswer(option, index + 1);
                    optionsContainer.appendChild(button);
                });
            }

            async checkAnswer(selectedAnswer, lane) {
                if (this.gameState !== 'playing') return;

                clearInterval(this.timerInterval);
                const timeTaken = (this.calculateTimeLimit() - this.currentTime).toFixed(2);

                // Move car to the chosen lane
                this.moveCarToLane(lane);

                // Calculate correct answer first
                const isCorrect = this.currentProblem.correctAnswer === selectedAnswer;

                // Visual feedback IMMEDIATELY - show correct answer in green
                const buttons = document.querySelectorAll('.lane-btn');
                buttons.forEach((btn, index) => {
                    btn.disabled = true;
                    btn.classList.remove('correct', 'wrong');

                    const btnValue = parseInt(btn.textContent);
                    const isThisCorrect = btnValue === this.currentProblem.correctAnswer;

                    // Show correct answer in green immediately
                    if (isThisCorrect) {
                        setTimeout(() => btn.classList.add('correct'), 100);
                    }

                    // Show wrong clicked answer in red (only if wrong)
                    if (index + 1 === lane && !isCorrect) {
                        setTimeout(() => btn.classList.add('wrong'), 100);
                    }
                });

                // Calculate score
                let earnedScore = 0;
                if (isCorrect) {
                    earnedScore = this.calculateLocalScore(parseFloat(timeTaken));
                }

                // Send to backend (but don't block on it)
                try {
                    const response = await fetch('/api/game/validate-answer', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            problem: this.currentProblem,
                            answer: selectedAnswer,
                            timeTaken: timeTaken,
                            speed: this.speed
                        })
                    });

                    if (response.ok) {
                        const result = await response.json();
                        // Use backend score if available
                        if (result.isValid) {
                            earnedScore = result.score || earnedScore;
                        }
                    }
                } catch (error) {
                    console.log('Backend validation skipped, using local validation');
                }

                // Process the answer
                if (isCorrect) {
                    this.handleCorrectAnswer(earnedScore);
                } else {
                    this.handleWrongAnswer();
                }

                // Wait before next problem
                setTimeout(() => {
                    if (this.gameState === 'playing') {
                        this.nextProblem();
                    }
                }, 1500);
            }

            calculateLocalScore(timeTaken) {
                const baseScore = 100; // Base score for correct answer
                const timeBonus = Math.max(0, 3 - timeTaken) * 30; // Bonus for quick answers
                const speedBonus = this.speed * 0.8; // Bonus for higher speed
                const comboBonus = this.combo * 15; // Bonus for combo

                return Math.floor(baseScore + timeBonus + speedBonus + comboBonus);
            }

            processAnswer(isCorrect, earnedScore, lane) {
                // Visual feedback
                const buttons = document.querySelectorAll('.lane-btn');
                buttons.forEach((btn, index) => {
                    btn.disabled = true;
                    btn.classList.remove('correct', 'wrong');

                    const btnValue = parseInt(btn.textContent);
                    const isThisCorrect = btnValue === this.currentProblem.correctAnswer;

                    setTimeout(() => {
                        if (isThisCorrect) {
                            btn.classList.add('correct');
                        } else if (index + 1 === lane && !isCorrect) {
                            btn.classList.add('wrong');
                        }
                    }, 300);
                });

                if (isCorrect) {
                    this.handleCorrectAnswer(earnedScore);
                } else {
                    this.handleWrongAnswer();
                }

                setTimeout(() => {
                    if (this.gameState === 'playing') {
                        this.nextProblem();
                    }
                }, 1500);
            }

            handleCorrectAnswer(earnedScore) {
                this.correctAnswers++;
                this.totalQuestions++;
                this.combo++;

                this.score += earnedScore;
                this.speed = Math.min(100, this.speed + 8);
                this.comboMultiplier = 1 + (Math.floor(this.combo / 5) * 0.2);

                this.showFloatingText(`+${earnedScore}`, 'success');
                this.showSpeedEffect();
                this.updateDisplay();
                this.updateRoadLines();
            }

            handleWrongAnswer() {
                this.totalQuestions++;
                this.combo = 0;
                this.comboMultiplier = 1;
                this.speed = Math.max(20, this.speed - 10); // Don't go below 20, reduce by 10 instead of 15

                this.showFloatingText('CRASH! -10 Speed', 'danger');
                this.showCrashAnimation();

                // Only end game if speed hits minimum threshold (20)
                if (this.speed <= 20) {
                    this.endGame();
                }

                this.updateDisplay();
                this.updateRoadLines();
            }

            moveCarToLane(lane) {
                this.currentLane = lane;
                const car = document.getElementById('playerCar');
                const position = this.lanePositions[lane - 1];

                car.style.transition = `left ${0.2 - (this.speed * 0.001)}s ease-out`;
                car.style.left = `${position}%`;
            }

            showCrashAnimation() {
                const obstacle = document.getElementById('obstacle');
                const car = document.getElementById('playerCar');
                const carRect = car.getBoundingClientRect();

                // Position obstacle at car location
                obstacle.style.left = `${carRect.left + carRect.width / 2 - 40}px`;
                obstacle.style.bottom = `${carRect.bottom}px`;
                obstacle.style.display = 'block';

                // Shake car
                car.style.animation = 'shake 0.5s ease';

                // Remove obstacle after animation
                setTimeout(() => {
                    obstacle.style.display = 'none';
                    car.style.animation = '';
                }, 500);
            }

            showSpeedEffect() {
                const effect = document.getElementById('speedEffect');
                const nitro = document.getElementById('nitroEffect');

                effect.style.opacity = this.speed / 100;
                nitro.style.opacity = this.speed > 50 ? (this.speed - 50) / 50 : 0;

                setTimeout(() => {
                    effect.style.opacity = 0;
                    nitro.style.opacity = 0;
                }, 500);
            }

            showFloatingText(text, type) {
                const floatingText = document.createElement('div');
                floatingText.textContent = text;
                floatingText.style.cssText = `
                        position: absolute;
                        top: 40%;
                        left: 50%;
                        transform: translate(-50%, -50%);
                        font-size: 2.5em;
                        font-weight: bold;
                        color: ${type === 'success' ? '#23d160' : '#ff3860'};
                        z-index: 250;
                        animation: floatUp 1.5s ease-out forwards;
                        text-shadow: 0 0 20px currentColor;
                        pointer-events: none;
                    `;

                document.querySelector('.game-container').appendChild(floatingText);

                setTimeout(() => {
                    floatingText.remove();
                }, 1500);
            }

            startTimer() {
                this.resetTimer();
            }

            resetTimer() {
                clearInterval(this.timerInterval);
                this.currentTime = this.calculateTimeLimit();
                this.updateTimerDisplay();

                this.timerInterval = setInterval(() => {
                    this.currentTime -= 0.1;
                    this.updateTimerDisplay();

                    if (this.currentTime <= 0) {
                        this.handleTimeUp();
                    }
                }, 100);
            }

            updateTimerDisplay() {
                const timeLimit = this.calculateTimeLimit();
                const percentage = (this.currentTime / timeLimit) * 100;

                document.getElementById('timerFill').style.width = percentage + '%';
                document.getElementById('timeLeft').textContent = this.currentTime.toFixed(1) + 's';

                // Color changes based on time left
                const timerFill = document.getElementById('timerFill');
                if (percentage > 60) {
                    timerFill.style.background = 'linear-gradient(90deg, #23d160, #23d160)';
                } else if (percentage > 30) {
                    timerFill.style.background = 'linear-gradient(90deg, #ffdd57, #ffdd57)';
                } else {
                    timerFill.style.background = 'linear-gradient(90deg, #ff3860, #ff3860)';
                }
            }

            handleTimeUp() {
                clearInterval(this.timerInterval);
                this.handleWrongAnswer();
                if (this.gameState === 'playing') {
                    setTimeout(() => this.nextProblem(), 1000);
                }
            }

            nextProblem() {
                this.generateProblem();
            }

            updateDisplay() {
                document.getElementById('currentScore').textContent = this.score;
                document.getElementById('currentSpeed').textContent = this.speed + '%';
            }

            async endGame() {
                this.gameState = 'gameOver';
                clearInterval(this.timerInterval);

                // Show game over effects
                const fire = document.getElementById('gameOverFire');
                fire.style.opacity = '0.6';
                setTimeout(() => {
                    fire.style.opacity = '0';
                }, 2000);

                document.getElementById('finalScore').textContent = this.score;
                document.getElementById('finalCorrect').textContent = this.correctAnswers;
                document.getElementById('finalTotal').textContent = this.totalQuestions;
                document.getElementById('finalSpeed').textContent = this.speed + '%';

                document.getElementById('mathProblemContainer').style.display = 'none';
                document.getElementById('timerContainer').style.display = 'none';
                document.getElementById('gameOverScreen').style.display = 'flex';

                await this.saveGameSession();
            }

            hideEffects() {
                document.getElementById('speedEffect').style.opacity = '0';
                document.getElementById('nitroEffect').style.opacity = '0';
                document.getElementById('gameOverFire').style.opacity = '0';
                document.getElementById('obstacle').style.display = 'none';
            }

            async saveGameSession() {
                const timePlayed = Date.now() - this.gameStartTime;

                try {
                    const session = {
                        playerId: this.playerId || 0,
                        player: { username: this.playerName },
                        score: this.score,
                        correctAnswers: this.correctAnswers,
                        wrongAnswers: this.totalQuestions - this.correctAnswers,
                        timeTakenMs: timePlayed,
                        startedAt: new Date(this.gameStartTime),
                        completedAt: new Date()
                    };

                    await fetch('/api/game/save-session', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(session)
                    });
                } catch (error) {
                    console.error('Error saving game:', error);
                }
            }

            async showLeaderboard() {
                try {
                    const response = await fetch('/api/game/leaderboard');
                    const leaderboard = await response.json();

                    const leaderboardContent = document.getElementById('leaderboardContent');
                    leaderboardContent.innerHTML = '';

                    if (leaderboard.length === 0) {
                        leaderboardContent.innerHTML = '<div class="text-center text-muted py-4">No records yet. Be the first champion!</div>';
                    } else {
                        leaderboard.forEach((session, index) => {
                            const item = document.createElement('div');
                            item.className = `leaderboard-item ${index < 3 ? 'top-3' : ''}`;
                            item.innerHTML = `
                                    <div class="rank">#${index + 1}</div>
                                    <div class="player-name">${session.username}</div>
                                    <div class="player-score">${session.score} pts</div>
                                `;
                            leaderboardContent.appendChild(item);
                        });
                    }

                    // Show appropriate screen
                    if (this.gameState === 'start') {
                        document.getElementById('startScreen').style.display = 'none';
                    } else {
                        document.getElementById('gameOverScreen').style.display = 'none';
                    }
                    document.getElementById('leaderboardScreen').style.display = 'flex';
                } catch (error) {
                    console.error('Error loading leaderboard:', error);
                    document.getElementById('leaderboardContent').innerHTML =
                        '<div class="text-center text-danger py-4">Error loading leaderboard. Please try again.</div>';
                }
            }

            hideLeaderboard() {
                document.getElementById('leaderboardScreen').style.display = 'none';
                if (this.gameState === 'start') {
                    document.getElementById('startScreen').style.display = 'flex';
                } else if (this.gameState === 'gameOver') {
                    document.getElementById('gameOverScreen').style.display = 'flex';
                }
            }

            restartGame() {
                document.getElementById('gameOverScreen').style.display = 'none';
                document.getElementById('mathProblemContainer').style.display = 'block';
                document.getElementById('timerContainer').style.display = 'block';
                this.startGame();
            }
        }

        // Initialize game
        const game = new TurboMathRacer();

        // Global functions for HTML buttons
        function startGame() {
            game.startGame();
        }

        function restartGame() {
            game.restartGame();
        }

        function showLeaderboard() {
            game.showLeaderboard();
        }

        function hideLeaderboard() {
            game.hideLeaderboard();
        }

        // Add CSS animations
        const style = document.createElement('style');
        style.textContent = `
                @@keyframes floatUp {
                    0% {
                        opacity: 1;
                        transform: translate(-50%, -50%);
                    }
                    100% {
                        opacity: 0;
                        transform: translate(-50%, -150px);
                    }
                }

                @@keyframes shake {
                    0%, 100% { transform: translateX(-50%) rotate(0deg); }
                    25% { transform: translateX(-50%) rotate(-10deg); }
                    75% { transform: translateX(-50%) rotate(10deg); }
                }
            `;
        document.head.appendChild(style);

        // Initialize car wheels animation
        const car = document.getElementById('playerCar');
        const wheels = car.querySelectorAll('.car-wheel');
        wheels.forEach(wheel => {
            wheel.style.animationDuration = '1s';
        });

        // Update wheel speed based on game speed
        function updateWheelSpeed(speed) {
            const baseDuration = 1;
            const speedFactor = speed / 100;
            const newDuration = Math.max(0.2, baseDuration - (speedFactor * 0.8));

            wheels.forEach(wheel => {
                wheel.style.animationDuration = `${newDuration}s`;
            });
        }

        // Initialize by hiding the name hint
        document.getElementById('nameHint').style.display = 'none';
    </script>
